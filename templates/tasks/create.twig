{% extends "layouts/main/main.twig" %}

{% block title %} Create task {% endblock %}

{% block content %}
     <form action="" method="post">
          <fieldset>
               <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" name="tasks[title]" class="form-control" aria-describedby="titleHelp" placeholder="title">
                    <small id="titleHelp" class="form-text text-muted">Name or short description of the task</small>
               </div>
               <div class="form-group">
                    <label for="description">Description</label>
                    <textarea class="form-control" name="tasks[description]" rows="4"></textarea>
                    <small class="form-text text-muted">Detailed description of the task</small>
               </div>
               <div class="form-group">
                    <label for="title">Time to notify</label>
                    <input type="text" name="tasks[time_to_notify]" class="datepicker-here form-control"
                           data-position="top left"
                           data-timepicker="true"
                           data-time-format='hh:ii'
                    >
                    <small class="form-text text-muted">Time when you will receive to notify message</small>
               </div>

               <div class="form-check">
                    <label class="form-check-label">
                         <input class="form-check-input" name="tasks[is_actual]" type="checkbox" value="">
                         Actual
                    </label>
               </div>
               <hr>
               <p>
                    <button type="submit" class="btn btn-success">Submit</button>
               </p>

          </fieldset>

     </form>
{% endblock %}


