{% extends "layouts/main/main.twig" %}

{% block title %} Tasks {% endblock %}

{% block content %}
    <div id="tasks">
    {% for task in tasks %}
        <div class="card ">

            <div class="card-header text-white bg-dark" id="headerTask{{ task.id }}">
                <div class="mb-0">
                    <span class="task-header collapsed" data-toggle="collapse" data-target="#task{{ task.id }}" aria-expanded="false" aria-controls="task{{ task.id }}">
                       {{ task.title }}
                    </span>
                </div>
            </div>

            <div id="task{{ task.id }}" class="collapse" aria-labelledby="headerTask{{ task.id }}" data-parent="#tasks">
                <div class="card-body">
                    <div>
                        {{ task.description }}
                    </div>

                    <hr>

                    <div class="row">
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {% if task.isActual == '1' %}
                                <button class="btn btn-danger" data-id="{{ task.id }}" onclick="toggleTask(this, false)">Deactivate</button>
                            {% else %}
                                <button class="btn btn-success" data-id="{{ task.id }}" onclick="toggleTask(this, true)">Activate</button>
                            {% endif %}
                            <a role="button" class="btn btn-primary" href="update/{{ task.id }}">Update</a>
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {% if task.timeToNotify is empty or task.timeToNotify == 0 %}
                                Without notification
                            {% else %}
                                Notify at: {{ task.timeToNotify|date("d.m.Y h:i") }}
                            {% endif %}
                        </div>
                    </div>

                </div>
            </div>

        </div>
    {% endfor %}
    </div>
{% endblock %}


